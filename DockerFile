FROM microsoft/dotnet
LABEL maintainer="Joe"

# Create a directory where our app will be placed
RUN mkdir -p /usr/smooth/

WORKDIR /usr/smooth/

#Copy the source COPY source dest
COPY . /usr/smooth/
#RUN git clone https://github.com/jbrach/smooth.git

RUN dotnet restore

RUN dotnet build

WORKDIR test/

RUN dotnet test


