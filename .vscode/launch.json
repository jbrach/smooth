{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/Smooth.Console/bin/Debug/netcoreapp2.0/Smooth.Console.dll",
            "args": [ "c:\\temp\\Smooth\\Images", "c:\\temp\\Smooth\\Root", "-s" ],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": true,
            "internalConsoleOptions": "openOnSessionStart",
            "console": "internalConsole"
           
            
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        } 
    ]
}